{
  "name": "next-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "clean:deps": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' + && find . -name 'pnpm-lock.yaml' -type f -prune -exec rm -f '{}' +",
    "storybook": "pnpm --filter @repo/core storybook",
    "storybook:build": "pnpm --filter @repo/core storybook:build",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "2.27.10",
    "@next/eslint-plugin-next": "16.0.5",
    "@types/node": "^20.17.10",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.2",
    "@typescript-eslint/eslint-plugin": "8.46.0",
    "@typescript-eslint/parser": "8.46.0",
    "eslint": "9.39.1",
    "eslint-config-next": "16.0.5",
    "eslint-plugin-react": "7.35.0",
    "sass": "1.77.6",
    "turbo": "2.6.1",
    "typescript": "5.6.3"
  },
  "pnpm": {
    "overrides": {
      "clsx": "2.1.1",
      "next": "16.0.5",
      "react": "19.2.0",
      "react-dom": "19.2.0"
    }
  },
  "packageManager": "pnpm@10.24.0",
  "volta": {
    "node": "20.19.1"
  }
}
